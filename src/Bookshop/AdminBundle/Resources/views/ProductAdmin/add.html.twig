{% extends "BookshopAdminBundle::layout.html.twig" %}
{% block body%}
<div id="page-heading"><h1>Add product</h1></div>

{% if form_errors(form) %}
<!--  start message-red -->
<div id="message-red">
    <table border="0" width="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td class="red-left"> {{ form_errors(form) }} <a href="">Please try again.</a></td>
            <td class="red-right"><a class="close-red"><img src="{{ asset('bundles/bookshopadmin/images/table/icon_close_red.gif') }}"   alt="" /></a></td>
        </tr>
    </table>
</div>
<!--  end message-red -->

{% endif %}
{% include 'BookshopAdminBundle:ProductAdmin:addForm.html.twig' with { 'form': form } %}
{% endblock %}
