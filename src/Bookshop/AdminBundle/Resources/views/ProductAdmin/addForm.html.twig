<table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
    <tr>
        <th rowspan="3" class="sized"><img src="{{ asset('bundles/bookshopadmin/images/shared/side_shadowleft.jpg') }}" width="20" height="300" alt="" /></th>
        <th class="topleft"></th>
        <td id="tbl-border-top">&nbsp;</td>
        <th class="topright"></th>
        <th rowspan="3" class="sized"><img src="{{ asset('bundles/bookshopadmin/images/shared/side_shadowright.jpg') }}" width="20" height="300" alt="" /></th>
    </tr>
    <tr>
        <td id="tbl-border-left"></td>
        <td>
            <!--  start content-table-inner -->
            <div id="content-table-inner">
                <form action="{{ path('bookshop_admin_product_add') }}" method="POST" {{ form_enctype(form) }}>
                <table border="0" width="100%" cellpadding="0" cellspacing="0">
                    <tr valign="top">
                        <td>
                            <!-- start id-form -->
                            <table border="0" cellpadding="0" cellspacing="0"  id="id-form">
                                <tr>
                                    <th valign="top">Title:</th>
                                    <td>{{ form_widget(form.title, {'attr': {'class': 'inp-form'} }) }}</td>
                                    <td>
                                        {% if form_errors(form.title) %}
                                        <div class="error-left"></div>
                                        <div class="error-inner">{{ form_errors(form.title) }}</div>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th valign="top">Category:</th>
                                    <td>{{ form_widget(form.category, {'attr': {'class': 'inp-form'} }) }}</td>
                                    <td>
                                        {% if form_errors(form.category) %}
                                        <div class="error-left"></div>
                                        <div class="error-inner">{{ form_errors(form.category) }}</div>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th valign="top">Short description:</th>
                                    <td>	
                                        {{ form_widget(form.shortdescription, {'attr': {'class': 'inp-form'} }) }}
                                    </td>
                                    <td>
                                        {% if form_errors(form.shortdescription) %}
                                        <div class="error-left"></div>
                                        <div class="error-inner">{{ form_errors(form.shortdescription) }}</div>
                                        {% endif %}
                                    </td>
                                </tr> 
                                <tr>
                                    <th valign="top">Price:</th>
                                    <td>{{ form_widget(form.price, {'attr': {'class': 'inp-form'} }) }}</td>
                                    <td>
                                        {% if form_errors(form.price) %}
                                        <div class="error-left"></div>
                                        <div class="error-inner">{{ form_errors(form.price) }}</div>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Image:</th>
                                    <td>{{ form_widget(form.file, {'attr': {'class': 'inp-form'} }) }}</td>
                                    <td>
                                        {% if form_errors(form.file) %}
                                        <div class="error-left"></div>
                                        <div class="error-inner">{{ form_errors(form.file) }}</div>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th valign="top">Description:</th>
                                    <td>{{ form_widget(form.description, {'attr': {'class': 'inp-form'} }) }}</td>
                                    <td>
                                        {% if form_errors(form.description) %}
                                        <div class="error-left"></div>
                                        <div class="error-inner">{{ form_errors(form.description) }}</div>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th valign="top">Stock:</th>
                                    <td>{{ form_widget(form.stock, {'attr': {'class': 'inp-form'} }) }}</td>
                                    <td>
                                        {% if form_errors(form.stock) %}
                                        <div class="error-left"></div>
                                        <div class="error-inner">{{ form_errors(form.stock) }}</div>
                                        {% endif %}
                                    </td>
                                </tr>
                                {{ form_rest(form) }}
                                <tr>
                                    <th>&nbsp;</th>
                                    <td valign="top">
                                        <input type="submit" value="" class="form-submit" />
                                        <input type="reset" value="" class="form-reset"  />
                                    </td>
                                    <td></td>
                                </tr>
                            </table>
                            <!-- end id-form  -->

                        </td>

                    </tr>
                    <tr>
                        <td><img src="{{ asset('bundles/bookshopadmin/images/shared/blank.gif') }}" width="695" height="1" alt="blank" /></td>
                        <td></td>
                    </tr>
                </table>
                </form>

                <div class="clear"></div>


            </div>
            <!--  end content-table-inner  -->
        </td>
        <td id="tbl-border-right"></td>
    </tr>
    <tr>
        <th class="sized bottomleft"></th>
        <td id="tbl-border-bottom">&nbsp;</td>
        <th class="sized bottomright"></th>
    </tr>
</table>

<div class="clear">&nbsp;</div>
